<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Steps"
            android:layout_width="123dp"
            android:layout_height="81dp"
            android:id="@+id/stepsTxt" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="112dp"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/anton" android:textSize="50sp"
            android:textAlignment="center"/>
    <TextView
            android:text="0"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:id="@+id/stepsValue" android:fontFamily="@font/anton"
            android:textSize="50sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/stepsTxt"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.501" app:layout_constraintVertical_bias="0.371"
            android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>